@model IEnumerable<WebBanHang.Models.Category>

<style>
    #div-u {
        padding-top: 10px;
        margin-top: 20px;
        text-decoration: none;
        text-align: center; /* Căn giữa các mục trong thanh điều hướng */
        background-color: white; /* Màu nền của thanh điều hướng */
        height: 60px; /* Chiều cao của thanh điều hướng */
        border-bottom: 3px solid black;
    }

    .div-cate {
        display: inline-block; /* Đặt các mục nằm ngang */
        margin: 0 15px; /* Thêm khoảng cách giữa các mục */
    }

        .div-cate a { /*tùy chỉnh kiểu dáng của các liên kết */
            color: black;
            text-decoration: none;
            font-size: large;
        }

            .div-cate a:hover { /*khi người dùng di chuột qua chúng*/
                color: chartreuse;
                text-decoration: none;
            }
</style>
<br />
<h3 style="color:darkred; text-align:center;"></h3>
<ul style="list-style-type: none;" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.NameCate, "ProductList", "Products", new
                {
                    category
               = item.IDCate
                }, "")
            </li>
        }
    }
</ul>

