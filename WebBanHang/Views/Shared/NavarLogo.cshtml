@model IEnumerable<WebBanHang.Models.Category>

<style>
    body {
        margin: 0;
    }

    .navbar {

        background-color: white; /* Nền màu */
        display: flex; /* Sử dụng flexbox */
        align-items: center; /* Căn giữa theo chiều dọc */
        justify-content: center; /* Căn giữa tất cả phần tử */
        padding: 10px; /* Khoảng cách bên trong */
        border-bottom: 3px solid black;
    }

    .nav-menu {
        list-style-type: none; /* Loại bỏ dấu chấm */
        padding: 0;
        margin: 0;
        display: flex; /* Đặt các mục nằm ngang */
        align-items: center; /* Căn giữa theo chiều dọc */
    }

        .nav-menu li {
            margin: 0 30px; /* Khoảng cách giữa các mục */
        }

        .nav-menu a {
            color: black; /* Màu chữ */
            text-decoration: none; /* Không có gạch chân */
            font-size: 20px; /* Kích thước chữ */
            transition: color 0.3s; /* Hiệu ứng chuyển màu */
        }

            .nav-menu a:hover {
                color: goldenrod; /* Màu chữ khi hover */
            }

    .logo {
        display: flex;
        justify-content: center; /* Căn giữa logo */
    }

    .navbar img {
        height: 80px; /* Chiều cao của logo */
    }

    .search-bar {
        display: flex; /* Sử dụng flexbox để căn giữa */
        align-items: center; /* Căn giữa theo chiều dọc */
    }

        .search-bar label {
            margin-right: 10px; /* Khoảng cách giữa tiêu đề và ô tìm kiếm */
            font-size: 20px; /* Kích thước chữ giống như các mục khác */
        }

        .search-bar input[type="text"] {
            padding: 5px; /* Khoảng cách bên trong ô tìm kiếm */
            border: 1px solid #ccc; /* Viền cho ô tìm kiếm */
            border-radius: 4px; /* Bo tròn viền */
            font-size: 17px; /* Kích thước chữ giống như các mục khác */
        }

        .search-bar button {
            background-color: #fff; /* Màu nền cho nút */
            border: 1px solid #ccc; /* Viền cho nút */
            border-radius: 4px; /* Bo tròn viền bên phải */
            cursor: pointer; /* Hiệu ứng con trỏ */
            padding: 0 10px; /* Khoảng cách bên trong nút */
            height: 38px; /* Chiều cao để khớp với ô tìm kiếm */
        }

            .search-bar button i {
                font-size: 20px; /* Kích thước của biểu tượng */
                color: black; /* Màu biểu tượng */
            }
            .search-bar button:hover {
                border-color: darkgoldenrod; /* Thay đổi màu viền khi hover */
            }

            .search-bar button:hover i {
                color: darkgoldenrod; /* Màu biểu tượng khi hover */
            }
</style>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Các thẻ khác -->
</head>


<div class="navbar">
    <ul class="nav-menu">
        <li class="nav-item">
            <a href="@Url.Action("NavarLogo", "Category")">Quan hệ cổ đông</a>
        </li>
        
            @if (ViewBag.Meetings != null)
            {
                foreach (var meeting in ViewBag.Meetings)
                {
                    <li>@meeting</li>
                }
            }
        
        <li class="nav-item">
            <a href="@Url.Action("NavarLogo2", "Category")">Cửa Hàng</a>
        </li>
    </ul>

    <div class="logo">
        <a href="@Url.Action("Index", "Home")">
            <img src="https://brandlogos.net/wp-content/uploads/2022/04/pnj-logo-brandlogos.net_.png" alt="Logo" />
        </a>
    </div>

    <div class="search-bar">
        @using (Html.BeginForm("ProductList", "Products", FormMethod.Get))
        {
            <label for="search">Tên Sản phẩm:</label>
            <input type="text" name="SearchString" id="search" placeholder="Tìm sản phẩm..." />
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>}
    </div>
</div>
